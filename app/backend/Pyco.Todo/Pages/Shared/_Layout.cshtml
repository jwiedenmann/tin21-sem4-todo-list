<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pyco.Todo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pyco.Todo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <header>
            <h1 class="text-center bg-primary text-secondary py-2 mb-0">It´s Time to manage YOUR TIME the better WAY with PYCO Todo! Damn</h1>
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">PYCO`s TODO</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler"
                            aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarToggler">
                        <ul class="navbar-nav me-auto mb-2 mb-md-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="TodoListen" asp-page="Index">TODO-Listen</a>
                            </li>
                            <li class="nav-item dropdown">
                                test
                            </li>
                        </ul>
                        <div>
                            @if (User.Identity is { IsAuthenticated: true })
                            {
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="fa-solid fa-circle-user"></i>&nbsp;&nbsp;@User.Identity.Name
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-md-end shadow-lg mt-3 rounded">
                                        <form method="post">
                                            <button type="submit" class="dropdown-item link-danger" asp-area="" asp-page="Index"
                                                    asp-page-handler="Logout">
                                                Logout
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        Login
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-md-end shadow-lg mt-3 rounded">
                                        <div class="flex-column">
                                            <form class="px-4 py-3" method="post" asp-area="" asp-page="Index">
                                                <div class="form-group mb-3">
                                                    <label for="userInput">Username oder Email</label>
                                                    <input type="text" name="userNameOrEmail" class="form-control
                                            form-control-md" id="userInput" required />
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="passwordInput">Passwort</label>
                                                    <input type="password" name="password" class="form-control form-control-md"
                                                           id="passwordInput" required />
                                                </div>
                                                <div class="d-flex justify-content-center">
                                                    <button type="submit" class="btn btn-secondary">Anmelden</button>
                                                </div>
                                            </form>
                                            <div class="dropdown-divider m-3"></div>
                                            <a class="dropdown-item link-info px-2 px-md-3" asp-area="UserRegistration">
                                                Noch keinen Account? Registriere
                                                dich jetzt!
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Pyco.Todo - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>